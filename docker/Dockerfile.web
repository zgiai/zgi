# Build stage
FROM node:20-alpine as builder
WORKDIR /app

# Set proxy environment variables
ARG HTTP_PROXY
ARG HTTPS_PROXY
ENV HTTP_PROXY=${HTTP_PROXY}
ENV HTTPS_PROXY=${HTTPS_PROXY}
ENV npm_config_proxy=${HTTP_PROXY}
ENV npm_config_https_proxy=${HTTPS_PROXY}

# Verify proxy settings
RUN echo "Checking proxy settings..." && \
  echo "HTTP_PROXY: $HTTP_PROXY" && \
  echo "HTTPS_PROXY: $HTTPS_PROXY"

# Copy package.json first
COPY frontend/web/package*.json ./

# Install dependencies with specific npm settings
RUN npm install

# Copy source code
COPY frontend/web .

# Build application
RUN npm run build

# Production stage
FROM nginx:alpine
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/app /usr/share/nginx/html
ENV PORT=80
EXPOSE ${PORT}
CMD sh -c "envsubst '\$PORT' < /etc/nginx/conf.d/default.conf > /etc/nginx/conf.d/default.conf && nginx -g 'daemon off;'"
