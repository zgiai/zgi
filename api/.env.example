# LLM Provider Settings
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_API_BASE=https://api.anthropic.com/v1

# DeepSeek
DEEPSEEK_API_KEY=sk-your-deepseek-key
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# Qwen (Alibaba Cloud)
QWEN_API_KEY=sk-your-qwen-key
QWEN_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1

# Production Environment Keys (Optional)
PROD_OPENAI_API_KEY=sk-your-prod-openai-key
PROD_ANTHROPIC_API_KEY=sk-ant-your-prod-anthropic-key
PROD_DEEPSEEK_API_KEY=sk-your-prod-deepseek-key
PROD_QWEN_API_KEY=sk-your-prod-qwen-key

# Staging Environment Keys (Optional)
STAGING_OPENAI_API_KEY=sk-your-staging-openai-key
STAGING_ANTHROPIC_API_KEY=sk-ant-your-staging-anthropic-key
STAGING_DEEPSEEK_API_KEY=sk-your-staging-deepseek-key
STAGING_QWEN_API_KEY=sk-your-staging-qwen-key

# Weaviate Settings
WEAVIATE_URL=your-weaviate-url
WEAVIATE_API_KEY=your-weaviate-api-key

# Database Settings
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=zgi
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# JWT Settings
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Pinecone Settings (Required)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=your-pinecone-index-name

# Vector Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Environment
ENVIRONMENT=default  # Options: default, production, staging

# Vector DB Settings
VECTOR_DB_SETTINGS_PROVIDER=weaviate
VECTOR_DB_SETTINGS_API_KEY=your_api_key
VECTOR_DB_SETTINGS_ENVIRONMENT=your_environment
VECTOR_DB_SETTINGS_INDEX_NAME=your_index_name
VECTOR_DB_SETTINGS_URL=http://localhost:8080

# EMBEDDING
EMBEDDING_SETTINGS_PROVIDER=openai
EMBEDDING_SETTINGS_API_KEY=your_api_key
EMBEDDING_SETTINGS_MODEL=text-embedding-3-small
EMBEDDING_SETTINGS_API_BASE=http://localhost:11434
EMBEDDING_SETTINGS_BATCH_SIZE=100
EMBEDDING_SETTINGS_MAX_RETRIES=3
EMBEDDING_SETTINGS_TIMEOUT=30

# Storage Settings
STORAGE_PROVIDER=local
STORAGE_LOCAL_UPLOAD_DIR=/uploads
STORAGE_QINIU_ACCESS_KEY=your_qiniu_access_key
STORAGE_QINIU_SECRET_KEY=your_qiniu_secret_key
STORAGE_QINIU_BUCKET_NAME=your_qiniu_bucket_name
STORAGE_QINIU_DOMAIN=your_qiniu_domain
